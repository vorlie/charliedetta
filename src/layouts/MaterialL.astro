---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta property="og:title" content="vorlie">
        <meta property="og:type" content="website">
        <meta property="og:description" content="*Temporary* page for ushie's material you theme generator">
        <meta property="og:image" content="/icon.png">
        <meta property="og:url" content="https://vorlie.pl">
        <meta name="description" content="*Temporary* page for ushie's material you theme generator">
		<link rel="icon" type="image/svg+xml" href="/icon.png" />
		<meta name="theme-color" content="#896db9">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
		--color-background:#272746;
		--color-main: #838383;
		--color-main-background: #3b3b5e33;
		--color-main-background-secondary: #ffffff1c;
		--rn-background-color: #ffffff2f;
		--rn-background-color-2: #ffffff5e;
		--rn-background-color-3: #00000054;
		--color-1: #3b3b5e9f;
		--color-2: #5f5f5f;
		--color-3: #7e7e7e;
		--border-dash-color: #b9b9b9;
		--color-text-secondary: #00C9B1;
		--color-text:#ffffff;
		--color-text-hover:#FFFFFF;
		--border-color: #a1a1a17d;
		--roundness: 16px;
	}
	html {
		scroll-behavior: smooth;
		color: var(--color-text);
		font-family: system-ui, sans-serif;
		background-color: #111118;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
