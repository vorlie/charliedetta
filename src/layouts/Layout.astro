---
interface Props {
	title: string;
}
const { title } = Astro.props;

import Sidebar from '../components/Sidebar.astro';
import Particles from '../components/particles.astro';
import  SpeedInsights  from "@vercel/speed-insights/astro"
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta property="og:title" content="vorlie">
        <meta property="og:type" content="website">
        <meta property="og:description" content="A place to my social media and stuff, you know">
        <meta property="og:image" content="/images/icon.png">
        <meta property="og:url" content="">
        <meta name="description" content="A place to my social media and stuff, you know">
		<link rel="icon" type="image/svg+xml" href="/images/icon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="theme-color" content="#896db9">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
		<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@400;700&family=Noto+Sans+JP:wght@400;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<SpeedInsights />
		<Particles />
		<div class="sidebar-container">
			<div class="sidebar">
				<Sidebar />
			</div>
		</div>
		<div class="navbar-container">
			<div class="navbar">
				<a href="/">Home</a>
				<a href="/fonts">Fonts</a>
				<a href="/projects">Projects</a>
				<a href="/discord-timestamps">Timestamps</a>
				<a href="/credits">Credits</a>
			</div>
		</div>
		<div class="main-content">
		  <slot />
		</div>
	  </body>
</html>
<style is:global>
	:root {
		--accent-gradient: #7a76ff;
		--color-background:#1E1443;
		--color-main: #838383;
		--color-main-background: #3d278b;
		--color-main-background-secondary: #3d278b56;
		--rn-background-color: #ffffff21;
		--rn-background-color-2: #ffffff3f;
		--color-1: #4830a1;
		--color-2: #C1BFFA;
		--color-3: #3b3b5e9f;
		--color-text-secondary: #c1bffa9c;
		--color-text:#C1BFFA;
		--color-text-dark:#3d278b;
		--color-text-hover:#FFFFFF;
		--border-color: #3d278b7d;
  		--roundness: 16px;
		--roundness-2: 8px;
		--status-color-online: #43b581; 
		--status-color-dnd: #f04747;
		--status-color-idle: #faa61a;
		--status-color-offline: #636366;
	}
	html {
		scroll-behavior: smooth;
		color: var(--color-text);
		font-family: system-ui, sans-serif;
		background-color: var(--color-background);
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
	img{
		-webkit-user-drag: none;
		user-drag: none;
		pointer-events: none;
		-khtml-user-drag: none;
		-moz-user-drag: none;
		-o-user-drag: none;
	}
	body, .non-selectable {
		-webkit-user-select: none;
		-moz-user-select: none;   
		-ms-user-select: none;    
		user-select: none;    
	}
	.img-draggable {
		-webkit-user-drag: auto;
		user-drag: auto;
		pointer-events: auto; 
	}
	.sidebar-container {
		display: block;
        position: fixed;
        width: 250px;
        height: 98.5%;
        background: var(--color-main-background-secondary);
		backdrop-filter: blur(2px);
		-webkit-backdrop-filter: blur(2px);
        overflow-y: auto;
		border-radius: var(--roundness);
    }
	.navbar-container {
		display: none;
	}
	.main-content {
		margin-left: 260px;
		padding: 20px;
        background: var(--color-main-background-secondary);
		backdrop-filter: blur(2px);
		-webkit-backdrop-filter: blur(2px);
        overflow-y: auto;
		border-radius: var(--roundness);
    }
	@media (max-width: 768px) {
		.sidebar-container {
			display: none;
		}
		.main-content {
			margin-left: 0;
			padding: 5px;
			margin-top: 70px; 
        }
		.navbar-container {
            display: block;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
			height: 60px;
			overflow-y: scroll;
			border-radius: 0 0 var(--roundness) var(--roundness);
            background: var(--color-main-background-secondary);
			backdrop-filter: blur(2px);
			-webkit-backdrop-filter: blur(2px);
            z-index: 1000;
        }
		.navbar{
			display: flex;
			justify-content: left;
			align-items: center;
			height: 100%;
		}
		.navbar a {
			margin: 5px;
			padding: 10px;
			color: var(--color-text);
			text-decoration: none;
			text-align: left;
			font-size: 18px;
			transition: 0.2s ease;
			border-radius: var(--roundness-2);
			background: var(--color-main-background-secondary);
			&:active {
				color: var(--color-text-hover);
				background: var(--color-1);
			}
		}
	}
</style>