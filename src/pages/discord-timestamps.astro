---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Vorlie | Discord Timestamp Generator">
	<canvas></canvas>
    <div class="header">
        <h1>Discord Timestamp Generator</h1>
    </div>
    <div class="wrapper">
        <div class="container">
            <p>Get a dynamic date-time display in your Discord messages. Choose your time and copy the code below.</p>
        </div>
        <div class="container">
            <span>Date</span><input type="date" id="d">
            <span>Time</span><input type="time" id="hm">
            <span>Type</span>
            <select id="t">
                <option value="t">short time</option>
                <option value="T">long time</option>
                <option value="d">short date</option>
                <option value="D">long date</option>
                <option value="f">long date with short time</option>
                <option value="F">long date with day of week and short time</option>
                <option value="R" selected>relative</option>
            </select>
            <span>Output</span><span id="preview"></span>
            <input type="text" readonly id="code" title="Press Ctrl/Cmd+C to copy"><button id="copy">Copy to clipboard</button>
            <button id="current">Reset to current time</button>
        </div>
    </div>
</Layout>
<script src="/src/scripts/particles.js"></script>
<script src="/src/scripts/timestamps.js"></script>
<style>
canvas{
    z-index: -10;
    height: 100%;
    left: 0;
    position: absolute;
    top: 0;
    width: 100%;
}
.header{
    text-align: left;
}
.header h1{
    color: var(--color-2);
}
.wrapper{
    border-radius: 0.8rem;
    border: 2px solid var(--color-1);
    background-color: var(--color-main-background);
    padding: 1rem;
    max-width: 50rem;
}
.container {
    display: grid;
    grid-template-columns: 1fr max-content;
    width: 50rem;
    margin: 0 auto;
}
.container p{
    padding-bottom: 1rem;
    text-align: center;
}

.container>* {
    margin: 0.2rem;
}

#current {
    grid-column: span 2;
}

input,
select,
button {
    background: var(--color-1);
    color: var(--color-2);
    padding: 0.3rem;
    border: 1px solid transparent;
    border-radius: 5px;
    transition: 0.2s ease;
    outline: none;
    &:hover{
        background: #5b3cccb9;
    }
}

#code {
    font-family: monospace
}

@media (max-width: 50rem) {
    div.container {
        display: flex;
        flex-direction: column;
        width: 90%;
    }

    div.container>* {
        margin: 1rem 0.2rem
    }
    .header{
        text-align: center;
    }
    canvas{
        display: none;
    }
}
</style>