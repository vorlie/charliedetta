<astro>
    <div class="vorlie">
        <img src="">
        <div class="userinfo">
        </div>
    </div> 
    <label>
        <input type="checkbox">
        <span class="menu"> <span class="hamburger"></span></span>
        <ul class="navbar-button">
            <li class="navbar-button"><a class="navbar-button--link" href="/">Home</a></li>
            <li class="navbar-button"><a class="navbar-button--link" href="/search">Search</a></li>
            <li class="navbar-button"><a class="navbar-button--link" href="/fonts">Fonts for Bunny</a></li>
            <li class="navbar-button"><a class="navbar-button--link" href="/discord-timestamps">Timestamps</a></li>
        </ul>
    </label>
</astro>
<script src="../scripts/lanyardNavbar.ts"></script>
<style>
body{
    overflow-x: hidden;
}
.vorlie{
    padding: 5px;
    border-radius: var(--roundness);
    background-color: var(--color-main-background);
    width: 250px;
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.vorlie img{
	border-radius: 50%;
    margin-left:5px;
	margin-right: 10px;
    width: 50px;
}

.userinfo{
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    margin-right: 5px;
}
label .menu {
    position: absolute;
    right: -100px;
    top: -100px;
    z-index: 100;
    width: 200px;
    height: 200px;
    background: var(--color-main-background);
    border-radius: 50% 50% 50% 50%;
    -webkit-transition: .5s ease-in-out;
    transition: .5s ease-in-out;
    box-shadow: 0 0 0 0 var(--color-main-background), 0 0 0 0 var(--color-main-background);
    cursor: pointer;
}
label .hamburger {
    position: absolute;
    top: 135px;
    left: 50px;
    width: 30px;
    height: 2px;
    background: var(--color-text);
    display: block;
    -webkit-transform-origin: center;
    transform-origin: center;
    -webkit-transition: .5s ease-in-out;
    transition: .5s ease-in-out;
}
label .hamburger:after, label .hamburger:before {
    -webkit-transition: .5s ease-in-out;
    transition: .5s ease-in-out;
    content: "";
    position: absolute;
    display: block;
    width: 100%;
    height: 100%;
    background: var(--color-text);
}
label .hamburger:before { top: -10px; }

label .hamburger:after { bottom: -10px; }

label input { display: none; }

label input:checked + .menu {
    box-shadow: 0 0 0 100vw var(--color-main-background), 0 0 0 100vh var(--color-main-background);
    border-radius: 0;
  
}

label input:checked + .menu .hamburger {
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
  
}

label input:checked + .menu .hamburger:after {
    -webkit-transform: rotate(90deg);
    transform: rotate(90deg);
    bottom: 0;
  
}

label input:checked + .menu .hamburger:before {
    -webkit-transform: rotate(90deg);
    transform: rotate(90deg);
    top: 0;
  
}

label input:checked + .menu + ul { 
    opacity: 1; 
    pointer-events: auto;
}

label ul {
    list-style: none;
    z-index: 200;
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    opacity: 0;
    -webkit-transition: .25s 0s ease-in-out;
    transition: .25s 0s ease-in-out;
    pointer-events: none;
}

label .navbar-button--link {
    font-size: 30px;
    margin-bottom: 1em;
    display: block;
    color: var(--color-text);
    text-decoration: none;
    transition: 0.2s ease;
    font-weight: bold;
}

label .navbar-button--link:hover {
    margin-bottom: 1em;
    display: block;
    color: var(--accent-gradient);
    text-decoration: none;
}
@media (max-width: 768px) {
    body{
        overflow-x: hidden;
    }
    label .menu {
        position: fixed;
    }
}
</style>